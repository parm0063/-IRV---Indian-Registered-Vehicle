<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.friendlyitsolution.meet.irvapp.MainActivity"
    android:background="#12c38d"
    tools:ignore="ContentDescription"
    android:gravity="center">


    <TextView
        android:id="@+id/tv11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:text="Login"
        android:textSize="45dp"
        android:textColor="#FFFFFF"/>

    <ImageView
        android:id="@+id/iv11"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_below="@+id/tv11"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:src="@drawable/motorcycle_icon"/>


    <com.github.florent37.materialtextfield.MaterialTextField
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        app:mtf_cardCollapsedHeight="3dp"
        app:mtf_hasFocus="false"
        app:mtf_image="@drawable/user_icon"
        app:mtf_animationDuration="500"
        app:mtf_labelColor="#FFFFFF"
        app:mtf_openKeyboardOnFocus="true"
        android:id="@+id/materialTextField11"
        android:layout_below="@+id/iv11"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true">
        <EditText
            android:id="@+id/et11"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Username"
            android:inputType="text"
            android:textColor="#333"
            android:textColorHint="#666"
            android:textSize="15sp" />

    </com.github.florent37.materialtextfield.MaterialTextField>

    <com.github.florent37.materialtextfield.MaterialTextField
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        app:mtf_animationDuration="500"
        app:mtf_cardCollapsedHeight="3dp"
        app:mtf_hasFocus="false"
        app:mtf_image="@drawable/lock_icon"
        app:mtf_labelColor="#FFFFFF"
        app:mtf_openKeyboardOnFocus="true"
        android:id="@+id/materialTextField12"
        android:layout_marginTop="2dp"
        android:layout_below="@+id/materialTextField11"
        android:layout_alignLeft="@+id/materialTextField11"
        android:layout_alignStart="@+id/materialTextField11">

        <EditText
            android:id="@+id/et12"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Password"
            android:inputType="textPassword"
            android:textColor="#333"
            android:textColorHint="#666"
            android:textSize="15sp" />

    </com.github.florent37.materialtextfield.MaterialTextField>

    <Button
        android:id="@+id/btnlogin1"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/materialTextField12"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"
        android:text="Login"
        android:textColor="#FFFFFF"
        android:textSize="20dp"
        android:textAllCaps="false"
        android:background="@drawable/rounded_btn1"/>

    <LinearLayout
        android:id="@+id/linearlayout1"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnlogin1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:orientation="horizontal"
        android:gravity="center">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center">
            <ImageView
                android:id="@+id/iv12"
                android:layout_width="50dp"
                android:layout_height="10dp"
                android:src="@drawable/line_shape"/>
        </LinearLayout>

        <TextView
            android:id="@+id/tv12"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:text="or"
            android:textAlignment="center"
            android:textSize="17dp"
            android:textColor="#FFFFFF"
            android:textStyle="italic"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center">
            <ImageView
                android:id="@+id/iv13"
                android:layout_width="50dp"
                android:layout_height="10dp"
                android:src="@drawable/line_shape"/>
        </LinearLayout>

    </LinearLayout>

    <Button
        android:id="@+id/btnsignup1"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linearlayout1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:text="Sign up"
        android:textColor="#12c38d"
        android:textSize="20dp"
        android:textAllCaps="false"
        android:background="@drawable/rounded_btn2"/>


</RelativeLayout>
